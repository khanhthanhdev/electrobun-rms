{
  "name": "electrobun-app",
  "version": "1.0.0",
  "description": "ElectroBun app with React + Hono + Drizzle + bun:sqlite",
  "scripts": {
    "dev": "vite build && electrobun build && electrobun dev",
    "dev:hmr": "concurrently \"bun run hmr\" \"bun run dev\"",
    "hmr": "vite --port 5173",
    "build": "vite build && electrobun build",
    "build:canary": "vite build && electrobun build --env=canary",
    "build:stable": "vite build && electrobun build --env=stable",
    "db:reset": "bun src/bun/db/reset.ts",
    "start": "bun run dev",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@knadh/oat": "^0.3.0",
    "drizzle-orm": "^0.45.1",
    "electrobun": "latest",
    "hono": "^4.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "valibot": "latest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.0",
    "@types/bun": "latest",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.31.9",
    "husky": "^9.1.7",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "ultracite": "7.2.3",
    "vite": "^6.0.3"
  }
}
